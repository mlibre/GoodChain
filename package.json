{
  "name": "goodchain",
  "version": "2.0.2",
  "description": "GoodChain: Blockchain for Everyone",
  "main": "index.js",
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "start": "tsx ./src/restAPI/app.ts",
    "3000": "tsx ./src/restAPI/app.ts --host 'http://127.0.0.1:3000' --nodes 'http://127.0.0.1:3001' --dbPath './assets/db/' --minerKeysFile './assets/keys/miner.json' --name 'GoodChain'",
    "3001": "tsx ./src/restAPI/app.ts --host 'http://127.0.0.1:3001' --nodes 'http://127.0.0.1:3000' --dbPath './assets/db/' --minerKeysFile './assets/keys/miner.json' --name 'GoodChain'",
    "3002": "tsx ./src/restAPI/app.ts --host 'http://127.0.0.1:3002' --nodes 'http://127.0.0.1:3000' --dbPath './assets/db/' --minerKeysFile './assets/keys/miner.json' --name 'GoodChain'",
    "build": "tsc",
    "buildw": "tsc --watch",
    "dev": "nodemon ./src/restAPI/app.ts",
    "startjs": "node ./src/restAPI/app.js"
  },
  "author": "mlibre",
  "license": "GPL-3.0-only",
  "dependencies": {
    "axios": "^1.6.7",
    "cookie-parser": "~1.4.4",
    "express": "^4.19.2",
    "lodash": "^4.17.21",
    "minimist": "^1.2.8",
    "morgan": "~1.9.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.2.0",
    "@types/cookie-parser": "^1.4.7",
    "@types/eslint__js": "^8.42.3",
    "@types/express": "^4.17.21",
    "@types/lodash": "^4.17.1",
    "@types/minimist": "^1.2.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.12.11",
    "@types/uuid": "^9.0.8",
    "eslint": "^8.57.0",
    "globals": "^15.2.0",
    "nodemon": "^3.1.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.10.2",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.8.0"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "execMap": {
      "ts": "tsx",
      "tsx": "tsx"
    },
    "events": {
      "restart": "tsc",
      "start": "tsc"
    }
  }
}